<% include partials/header %>
<!-- Reg form -->
  <div class="container">
    <div class="wrapper">
      <div class="row">
        <div class="col">
          <div class="jumbotron">
            <h1 class="text-center">Create your password</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <form action="/validate/set-password" method="POST">
            <div class="form-row">
              <div class="col-md-4 mt-1">
                <label class="float-left" for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Username">
              </div>
              <div class="col-md-4 mt-1">
                <label class="float-left" for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password">
              </div>
              <div class="col-md-4 mt-1">
                <label class="float-left" for="confirmationPassword">Confirm Password</label>
                <input type="password" id="confirmationPassword" name="confirmationPassword" class="form-control" placeholder="Confirm Password">
              </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3 full-btn float-right">Create Password</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- End Reg form -->
<% include partials/footer %>