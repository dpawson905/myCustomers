<% include ../partials/header %>
<div class="container">
  <div class="row my-5">
    <div class="col">
      <h1>All customers sorted by route (eventually)</h1>
      <p>Total customers: <%=customers.length%></p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Week - Day</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Tech</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach((customersList) => { %>
            <tr>
              <th scope="row"><%= customersList.week %> - <%= customersList.day %></th>
              <td><%= customersList.firstName %></td>
              <td><%= customersList.lastName %></td>
              <td><%= customersList.tech.username %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-12">
          <nav aria-label="Page navigation example">
            <ul class="pagination pagination-sm justify-content-center">
              <li class="page-item"><a class="page-link" href="#"><span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span></a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#"><span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span></a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div class="row ">
    <div class="col my-5">
      <h1>All users sorted by route (eventually)</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Username</th>
            <th scope="col">Admin</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((usersList) => { %>
            <tr>
              <td><%= usersList.firstName %></td>
              <td><%= usersList.lastName %></td>
              <td><%= usersList.username %></td>
              <td><%= usersList.isAdmin %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% include ../partials/footer %>