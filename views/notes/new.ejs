<% include ../partials/header %>

<div class="container">
<h1 class="text-center white m-3">Add New Comment for <%=customer.firstName%></h1>
  <div class="row">
  <div class="col-md-4 offset-md-4">
      <form action="/customers/<%=customer._id%>/notes" method="POST">
          <div class="form-group">
              <label for="note">New Note</label>
              <textarea id="note" class="form-control" type=text name="text" placeholder="text"></textarea>
          </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
      </form>
      <a class="btn btn-sm btn-success" href="/customers/<%= customer.id %>">Go Back</a>
  </div>
  </div>
</div>

<% include ../partials/footer %>