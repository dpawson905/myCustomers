<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col m8 offset-m2">
      <h3 class="center">Customer Access &mdash; Login</h3>
    </div>
    <div class="row">
      <form class="col m8 offset-m2" action="/auth/login" method="POST">
        <div class="row">
          <div class="input-field col m6">
            <input id="userName" name="username" type="text" class="validate" required>
            <label for="userName">Username</label>
            <span class="helper-text" data-error="Username is required" data-success="Looks good!"></span>
          </div>
          <div class="input-field col m6">
            <input id="password" name="password" type="password" class="validate" required>
            <label for="password">Password</label>
            <span class="helper-text" data-error="Password is required" data-success="Looks good!"></span>
          </div>
        </div>
        <button class="waves-effect waves-light btn" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>
<% include partials/footer %>